        /* ESTILOS PARA LA TABLA RESPONSIVA DE ALUMNOS */
        .table-wrapper-alumnos { /* Contenedor general para la tabla, similar a schedule-content-wrapper */
            background-color: #000;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #4e4f51;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            margin-top: 20px;
            width: 100%; /* Ocupar todo el ancho del .container-alumnos */
            box-sizing: border-box;
        }

        .table-responsive-custom { /* Div que envuelve la tabla para el scroll */
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
             width: 100%;
        }
        
        .table-alumnos-responsive {
            table-layout: fixed; /* Columnas de ancho fijo en escritorio */
            width: 100%;
            min-width: 1200px; /* Un min-width grande para forzar scroll horizontal si es necesario */
            border-collapse: separate; 
            border-spacing: 2px; 
            background-color: #1c1c1c; 
        }

        .table-alumnos-responsive th,
        .table-alumnos-responsive td {
            vertical-align: middle;
            padding: 12px 10px; 
            border: none; 
            border-radius: 3px; 
            color: #e0e0e0;
            overflow: hidden; /* Para controlar desbordamiento de texto */
            text-overflow: ellipsis; /* Añadir '...' si el texto es muy largo */
            white-space: nowrap; /* Evitar que el texto se parta en múltiples líneas por defecto */
        }
        
        .table-alumnos-responsive th {
             background-color: #333;
             color: #FEDB37; /* Dorado para cabeceras */
             text-align: center;
             white-space: nowrap; /* Evitar que el texto de cabecera se parta */
        }
        .table-alumnos-responsive tbody tr td {
            background-color: #2a2a2a;
        }
        .table-alumnos-responsive tbody tr:hover td {
            background-color: #313131; /* Un poco más claro en hover */
        }

        /* Columna de Acciones Fija */
        .table-alumnos-responsive th:first-child,
        .table-alumnos-responsive td:first-child { 
            width: 100px; 
            min-width: 100px; 
            max-width: 100px;
            text-align: center;
            position: sticky;
            left: 0;
            z-index: 2;
            background-color: #333; /* Fondo para la cabecera de acciones */
        }
        .table-alumnos-responsive tbody td:first-child {
            background-color: #2a2a2a; /* Fondo para las celdas de acciones en el body */
             /* Para asegurar que los botones no se corten si el contenido es poco */
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

        /* Anchos sugeridos para otras columnas (ajustar según necesidad) */
        .table-alumnos-responsive th.col-nombre, .table-alumnos-responsive td.col-nombre { width: 150px; min-width: 150px; }
        .table-alumnos-responsive th.col-apellido, .table-alumnos-responsive td.col-apellido { width: 150px; min-width: 150px; }
        .table-alumnos-responsive th.col-instrumento, .table-alumnos-responsive td.col-instrumento { width: 120px; min-width: 120px; }
        .table-alumnos-responsive th.col-modalidad, .table-alumnos-responsive td.col-modalidad { width: 100px; min-width: 100px; }
        .table-alumnos-responsive th.col-monto, .table-alumnos-responsive td.col-monto { width: 90px; min-width: 90px; text-align: right; padding-right: 15px;}
        .table-alumnos-responsive th.col-dia-pago, .table-alumnos-responsive td.col-dia-pago { width: 80px; min-width: 80px; text-align: center;}
