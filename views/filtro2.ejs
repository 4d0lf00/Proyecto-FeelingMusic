<body>
    <main class="main-content">
        <div class="container-alumnos">
            <h1><i class="fas fa-users"></i> Gestión de Alumnos</h1>

            <div id="feedbackArea" class="feedback-area"></div>

            <form id="buscarForm">
                <div class="form-group">
                    <label for="busqueda">Buscar Alumno:</label>
                    <input type="text" id="busqueda" name="busqueda" placeholder="Nombre, Apellido, RUT, Email...">
                </div>
                <button type="submit" class="btn"><i class="fas fa-search"></i> Buscar</button>
            </form>

            <div class="table-wrapper-alumnos">
                <div class="table-responsive-custom">
                    <table id="tablaAlumnos" class="table-alumnos-responsive">
                        <thead>
                            <tr>
                                <!-- La primera TH es para Acciones y es sticky -->
                                <th>Acciones</th> 
                                <th class="col-nombre">Nombre <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                                <th class="col-apellido">Apellido <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                                <th class="col-instrumento">Instrumento <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                                <th class="col-modalidad">Modalidad <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                                <th class="col-monto">Monto <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                                <th class="col-dia-pago">Día Pago <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>                        
                                <th class="col-comentarios">Comentarios <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                                <th class="col-celular">Celular <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>                    
                                <th class="col-fecha-registro">F. Registro <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                                <th class="col-email">Email <img src="/images/sort-icon.png" class="sort-icon" alt="ordenar"></th>
                            </tr>
                        </thead>
