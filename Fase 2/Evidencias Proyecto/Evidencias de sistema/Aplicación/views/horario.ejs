<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/horario.css">
  </head>
  <body>
    <div class="container py-4 fade-in">
      <header class="text-center mb-4">
        <h1 class="display-4">Bienvenido, <%= alumno.nombre %> <%= alumno.apellido %></h1>
        <p class="lead" id="current-date"></p>
      </header>

      <div class="row">
        <div class="col-md-8 mx-auto">
          <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
              <h2 class="h4 mb-0">Mis Clases</h2>
            </div>
            <div class="card-body">
              <% if (clases && clases.length > 0) { %>
                <% clases.forEach(function(clase) { %>
                  <div class="class-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <h4 class="h5 mb-1"><%= clase.nombre_clase %></h4>
                      <span class="time-badge">
                        <%= clase.hora_inicio %> - <%= clase.hora_fin %>
                      </span>
                    </div>
                    <div class="class-info">
                      <p><strong>Fecha:</strong> <%= clase.dia %>/<%= clase.mes %>/<%= clase.annio %></p>
                      <p><strong>Instrumento:</strong> <%= clase.instrumento %></p>
                      <p><strong>Profesor:</strong> <%= clase.profesor_nombre %> <%= clase.profesor_apellido %></p>
                      <p><strong>Sala:</strong> <%= clase.sala_nombre || 'Por asignar' %></p>
                      <p><strong>Modalidad:</strong> <%= clase.modalidad %></p>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="alert alert-info">
                  No tienes clases registradas en este momento.
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/horario.js"></script>
  </body>
</html>