<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horarios de Clases y Asignaci√≥n de Instrumentos</title>
    <style>
        /* Estilo de fondo y contenedor */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            --s: 200px;
            --c1: #1d1d1d;
            --c2: #4e4f51;
            --c3: #3c3c3c;
            background: repeating-conic-gradient(
                from 30deg,
                #0000 0 120deg,
                var(--c3) 0 180deg
              )
              calc(0.5 * var(--s)) calc(0.5 * var(--s) * 0.577),
              repeating-conic-gradient(
                from 30deg,
                var(--c1) 0 60deg,
                var(--c2) 0 120deg,
                var(--c3) 0 180deg
              );
            background-size: var(--s) calc(var(--s) * 0.577);
        }

        .container {
            width: 80%;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
            border-radius: 8px;
            background-color: #000;
            border: 1px solid #4e4f51;
            color: #d1d1d1;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        h2 {
            color: #d1d1d1;
        }

        /* Estilo de formulario */
        .form-container {
            margin-bottom: 20px;
            padding: 20px;
            background-color: #2c2c2c;
            border-radius: 8px;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .form-group label {
            display: block;
            color: #d1d1d1;
            margin-bottom: 5px;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #4e4f51;
            background-color: #3c3c3c;
            color: #d1d1d1;
        }

        .btn {
            padding: 10px 20px;
            background: radial-gradient(ellipse farthest-corner at right bottom, #FEDB37 0%, #FDB931 8%, #9f7928 30%, #8A6E2F 40%, transparent 80%),
            radial-gradient(ellipse farthest-corner at left top, #FFFFFF 0%, #FFFFAC 8%, #D1B464 25%, #5d4a1f 62.5%, #5d4a1f 100%);
            color: white;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            border-radius: 4px;
            text-align: center;
            margin-top: 10px;
            position: relative;
            overflow: hidden;
        }

        .btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease;
            transform: scale(0);
            border-radius: 50%;
        }

        .btn:hover::after {
            transform: scale(4);
        }

        .btn:active {
            transform: scale(0.98);
        }

        .edit-btn, .delete-btn {
            padding: 6px 12px;
            margin-left: 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .edit-btn {
            background-color: #4e4f51;
            color: #d1d1d1;
        }

        .edit-btn:hover {
            background-color: #6b6c6e;
        }

        .edit-btn:active {
            transform: scale(0.95);
        }

        .delete-btn {
            background-color: #d9534f;
            color: #fff;
        }

        .delete-btn:hover {
            background-color: #c9302c;
        }

        .delete-btn:active {
            transform: scale(0.95);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            color: #d1d1d1;
        }

        table, th, td {
            border: 1px solid #4e4f51;
        }

        th, td {
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #3c3c3c;
            cursor: pointer;
        }

        tr:hover {
            background-color: #2c2c2c;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="header">
            <h2>Horario de Clases</h2>
            <button onclick="window.location.href='/horarios-semana'" class="btn">Ver Horario Semanal</button>
        </div>
        <form id="horarioForm" method="POST">
            <div class="form-group">
                <label for="fecha">Fecha:</label>
                <input type="date" id="fecha" name="fecha" required>
            </div>

            <div class="form-group">
                <label for="horaInicio">Hora de inicio:</label>
                <input type="time" id="horaInicio" name="horaInicio" required>
            </div>

            <div class="form-group">
                <label for="horaFin">Hora de fin:</label>
                <input type="time" id="horaFin" name="horaFin" required>
            </div>

            <input type="hidden" id="profesorId" name="profesorId" value="<%= userId %>">
            <input type="hidden" id="horarioId" name="horarioId" value="">

            <div class="form-group">
                <label for="sala">Sala:</label>
                <select id="sala" name="salaNombre" required>
                    <% salas.forEach(sala => { %>
                        <option value="<%= sala.nombre %>"><%= sala.nombre %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="instrumento">Instrumento:</label>
                <select id="instrumento" name="instrumentoNombre" required>
                    <% instrumentos.forEach(instrumento => { %>
                        <option value="<%= instrumento.nombre %>"><%= instrumento.nombre.charAt(0).toUpperCase() + instrumento.nombre.slice(1) %></option>
                    <% }) %>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>

        <h3 class="mt-5">Horarios Guardados</h3>
        <ul id="listaHorarios" class="list-group mt-3">
            <% horarios.forEach(horario => { %>
                <li class="list-group-item" data-id="<%= horario.id %>">
                    <%= horario.dia %>-<%= horario.mes %>-<%= horario.annio %> 
                    de <%= horario.hora_inicio %> a <%= horario.hora_fin %> en <%= horario.sala %>
                    <br>Instrumento: <%= (horario.instrumento || 'Ninguno').charAt(0).toUpperCase() + (horario.instrumento || 'Ninguno').slice(1) %>
                    <button class="edit-btn" onclick="editarClase(<%= horario.id %>)">Editar</button>
                    <button class="delete-btn" onclick="confirmarEliminarClase(<%= horario.id %>)">üóëÔ∏è</button>
                </li>
            <% }) %>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('horarioForm').addEventListener('submit', function(event) {
            event.preventDefault();

            // Obtener los valores del formulario
            const fecha = document.getElementById('fecha').value;
            const horaInicio = document.getElementById('horaInicio').value;
            const horaFin = document.getElementById('horaFin').value;
            const profesorId = document.getElementById('profesorId').value;
            const salaNombre = document.getElementById('sala').options[document.getElementById('sala').selectedIndex].text;
            const instrumentoNombre = document.getElementById('instrumento').options[document.getElementById('instrumento').selectedIndex].text;
            const horarioId = document.getElementById('horarioId').value;

            const url = horarioId ? `/actualizar-horario/${horarioId}` : '/guardar-horario';
            const method = horarioId ? 'PUT' : 'POST';

            // Enviar los datos al servidor usando fetch
            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    fecha,
                    horaInicio,
                    horaFin,
                    profesorId,
                    salaNombre,
                    instrumentoNombre
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error en la respuesta del servidor');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Manejar el √©xito
                    alert('Horario guardado exitosamente.');
                    location.reload(); // Recargar la p√°gina para ver los cambios
                } else {
                    alert(data.message || 'Error al guardar el horario');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert(error.message || 'Hubo un error al guardar el horario');
            });
        });

        function editarClase(horarioId) {
            const horarioItem = document.querySelector(`li[data-id='${horarioId}']`);
            const [fecha, horaInicio, horaFin, sala] = horarioItem.textContent.split(' ');

            document.getElementById('fecha').value = fecha.split('-').reverse().join('-');
            document.getElementById('horaInicio').value = horaInicio;
            document.getElementById('horaFin').value = horaFin;
            document.getElementById('sala').value = sala;
            document.getElementById('horarioId').value = horarioId;
        }

        function confirmarEliminarClase(horarioId) {
            if (confirm('¬øEst√°s seguro de que deseas eliminar esta clase?')) {
                eliminarClase(horarioId);
            }
        }

        function eliminarClase(horarioId) {
            fetch(`/eliminar-horario/${horarioId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Error en la respuesta del servidor');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    document.querySelector(`li[data-id='${horarioId}']`).remove();
                    alert('Clase eliminada exitosamente.');
                } else {
                    alert(data.message || 'Error al eliminar la clase');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert(error.message || 'Hubo un error al eliminar la clase');
            });
        }
    </script>
</body>
</html>