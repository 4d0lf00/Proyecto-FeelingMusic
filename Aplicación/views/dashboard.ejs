<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="container">
        <nav class="sidebar">
            <div class="logo">
                <h2><i class="fas fa-chart-line"></i> Menu</h2>
            </div>
            <ul>
                <li class="active">
                    <a href="/" title="Dashboard">
                        <i class="fas fa-home"></i> 
                        <span class="menu-text">Panel de administraci√≥n</span>
                    </a>
                </li>
                <li>
                    <a href="#" title="Users">
                        <i class="fas fa-users"></i> 
                        <span class="menu-text">Users</span>
                    </a>
                </li>
                <li>
                    <a href="#" title="Products">
                        <i class="fas fa-box"></i> 
                        <span class="menu-text">Products</span>
                    </a>
                </li>
                <li>
                    <a href="#" title="Orders">
                        <i class="fas fa-shopping-cart"></i> 
                        <span class="menu-text">Orders</span>
                    </a>
                </li>
                <li>
                    <a href="#" title="Settings">
                        <i class="fas fa-cog"></i> 
                        <span class="menu-text">Settings</span>
                    </a>
                </li>
            </ul>
        </nav>

        <main class="content">
            <header>
                <h1>Dashboard Overview</h1>
                <div class="user-info">
                    <span><i class="fas fa-user"></i> Admin User</span>
                </div>
            </header>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3><i class="fas fa-users"></i> Total Users</h3>
                    <p><%= data && data.users ? data.users : 0 %></p>
                </div>
                <div class="stat-card">
                    <h3><i class="fas fa-dollar-sign"></i> Revenue</h3>
                    <p>$<%= data && data.revenue ? data.revenue.toLocaleString() : 0 %></p>
                </div>
                <div class="stat-card">
                    <h3><i class="fas fa-shopping-cart"></i> Orders</h3>
                    <p><%= data && data.orders ? data.orders : 0 %></p>
                </div>
            </div>

            <div class="charts-grid">
                <div class="chart-card collapsible">
                    <div class="chart-header" onclick="toggleChart(this)">
                        <h3>Monthly Sales Trend</h3>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="chart-content">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
                <div class="chart-card">
                    <h3>Sales by Category</h3>
                    <canvas id="categoryChart"></canvas>
                </div>
                <div class="chart-card">
                    <h3>Traffic Sources</h3>
                    <canvas id="trafficChart"></canvas>
                </div>
            </div>
        </main>
    </div>

